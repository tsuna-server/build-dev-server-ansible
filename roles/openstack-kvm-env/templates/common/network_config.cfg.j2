version: 2
ethernets:
  enp1s0:
     dhcp4: false
     dhcp6: false
  enp2s0:
     dhcp4: false
     dhcp6: false
     addresses: [{{ instance.network.management.ip }}]
     gateway4: {{ instance.network.management.gateway }}
     nameservers:
       addresses: [{% set g = namespace(comma = '') %}{% for item in instance.network.management.dns.addresses %}{{ g.comma }}{{ item }}{% set g.comma = ', ' %}{% endfor %}]
       search: [ example.com ]
